{%
  set classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'visually_impairedSettings',
  ]
%}

<div{{ attributes.addClass(classes) }}>
    {{ title_prefix }}
    {{ title_suffix }}
    <div class="visually_impairedSettings__inner">
        <div class="visually_impairedSettings__fsizes visually_impairedSettings__group">
            <div class="visually_impairedSettings__label">{{ size_label }}</div>
            <div class="visually_impairedSettings__items">
                <div class="visually_impairedSettings__fsize visually_impairedSettings__item -small">A</div>
                <div class="visually_impairedSettings__fsize visually_impairedSettings__item -medium">A</div>
                <div class="visually_impairedSettings__fsize visually_impairedSettings__item -large">A</div>
            </div>
        </div>
        <div class="visually_impairedSettings__colors visually_impairedSettings__group">
            <div class="visually_impairedSettings__label">{{ color_label }}</div>
            <div class="visually_impairedSettings__items">
                <div class="visually_impairedSettings__color visually_impairedSettings__item -white">A</div>
                <div class="visually_impairedSettings__color visually_impairedSettings__item -dark">A</div>
                <div class="visually_impairedSettings__color visually_impairedSettings__item -blue">A</div>
            </div>
        </div>
        <div class="visually_impairedSettings__images visually_impairedSettings__group">
            <div class="visually_impairedSettings__label">{{ images_label }}</div>
            <div class="visually_impairedSettings__items">
                <div class="visually_impairedSettings__image visually_impairedSettings__item -all">All</div>
                <div class="visually_impairedSettings__image visually_impairedSettings__item -bw">BW</div>
                <div class="visually_impairedSettings__image visually_impairedSettings__item -alt">ALT</div>
                <div class="visually_impairedSettings__image visually_impairedSettings__item -none">NONE</div>
            </div>
        </div>  
    </div>
</div>

